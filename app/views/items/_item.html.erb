<div id="<%= dom_id(item) %>" class="flex justify-between items-center bg-white p-3 rounded-lg shadow transition-all duration-300 <%= 'opacity-50 line-through' if item.discussed %>">
  <div class="text-md"><%= item.content %></div>
  <div class="flex gap-2">
    <%= button_to "✅", toggle_discussed_meeting_item_path(item.meeting, item), method: :patch, data: { turbo_stream: true }, class: "bg-green-500 text-white px-2 py-1 rounded hover:bg-green-600 transition" %>
    <%= button_to "🗑️", meeting_item_path(item.meeting, item), method: :delete, data: { turbo_confirm: 'Delete this item?' }, class: "bg-red-500 text-white px-2 py-1 rounded hover:bg-red-600 transition" %>
  </div>
</div>