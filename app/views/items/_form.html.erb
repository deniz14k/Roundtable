<%= form_with(model: [meeting, item], class: "bg-white p-4 rounded-xl shadow space-y-4") do |form| %>
  <div>
    <%= form.label :content, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :content, autofocus: true, class: "mt-1 block w-full border border-gray-300 rounded-md px-3 py-2 shadow-sm" %>
  </div>

  <div class="flex items-center">
    <%= form.check_box :discussed, class: "mr-2" %>
    <%= form.label :discussed, class: "text-sm text-gray-700" %>
  </div>

  <%= form.submit "Add Item", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
<% end %>