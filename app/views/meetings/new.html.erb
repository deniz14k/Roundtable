<h1 class="text-3xl font-bold mb-6">New Meeting</h1>

<%= form_with(model: @meeting, class: "bg-white p-6 rounded-xl shadow space-y-6") do |form| %>
  <% if @meeting.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
      <h2 class="font-semibold mb-2"><%= pluralize(@meeting.errors.count, "error") %> prevented this meeting from being saved:</h2>
      <ul class="list-disc list-inside">
        <% @meeting.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :title, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm px-3 py-2" %>
  </div>

  <div>
    <%= form.label :scheduled_for, class: "block text-sm font-medium text-gray-700" %>
    <%= form.datetime_select :scheduled_for, class: "mt-1 block w-full" %>
  </div>

  <div class="flex justify-between items-center mt-4">
    <%= form.submit "Create Meeting", class: "bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 transition" %>
    <%= link_to "Cancel", meetings_path, class: "text-sm text-gray-500 hover:underline" %>
  </div>
<% end %>
